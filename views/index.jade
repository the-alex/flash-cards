extends layout

block content
  div.container-fluid
    script(type="text/javascript").
      var index = #{index};
    div.row
      div.col-sm-3
        // Nothing goes here!
      div.col-sm-6
        button(onclick="window.location.href='/?index=' + --index") Prev
        button(onclick="var def = document.getElementById('definition'); def.style.visibility = 'visible'") Show Def
        button(onclick="window.location.href='/?index=' + ++index") Next
        button(onclick="window.location.href='/?rand=true'") Rand
        h1 Word
        div#word
          p=deck[index].word
        h1 Definition
        div#definition(style="visibility: hidden")
          p=deck[index].definition
      div.col-sm-3
        // Nothing goes here!
